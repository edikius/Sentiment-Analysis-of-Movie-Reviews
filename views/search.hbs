<script type="text/javascript">
  $(document).ready();
</script>


<div class="container">


  <form method="get" action="/search">
      <div class="form-group">
        <label for="formGroupExampleInput">Find movie:</label>
        <input type="text" name="movie_title" class="form-control" id="formGroupExampleInput" placeholder="Search for movie to analyze">
        <br>
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
  </form>
  <hr>
  <h1>Results for {{movie_title}}</h1> <br>
  {{#each items}}
    <div class="card h-100" style="width: 18rem; margin:5px; display: inline-block">
      <img src="{{this.image}}" class="card-img-top">
      <div  class="card-header">{{this.title}} ({{this.year}})</div>
      <div class="card-body" style="padding: 15px;">
        <a href="/analyze{{this.id}}" class="btn btn-primary" style="margin: 0 auto; width: 100%">Analyze reviews</a>
      </div>
    </div>
{{/each}}
</div>
